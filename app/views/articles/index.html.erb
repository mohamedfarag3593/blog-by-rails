<div class="container-fluid">
    <h1 class="text-center">Listing Articles</h1>

    <h3>
        <%= link_to "New article", new_article_path %>
    </h3>

    <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>Control</th>
        </tr>
        </thead>
        <tbody>

        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.text %></td>
                <td>
                    <%= link_to "Show", article_path(article), class: "btn btn-primary" %>
                    <%= link_to "Edit", edit_article_path(article), class: "btn btn-warning mx-2" %>
                    <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
                </td>

            </tr>
        <% end %>
        </tbody>
    </table>
</div>